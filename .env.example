# Copy to .env and fill with your actual values
# NEVER commit the actual .env file

# Application
APP_NAME=Financial Advisor AI Agent
SECRET_KEY=your-secret-key-here-use-openssl-rand-base64-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/financial_advisor_agent
REDIS_URL=redis://localhost:6379

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# HubSpot OAuth
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=http://localhost:8000/auth/hubspot/callback

# API Keys
ANTHROPIC_API_KEY=sk-ant-api03-...  # REQUIRED for AI Agent
OPENAI_API_KEY=sk-...  # Required for embeddings

# Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-encryption-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173

# Backend URL (for webhooks)
BACKEND_URL=http://localhost:8000

# Environment
ENVIRONMENT=development

# RAG Configuration (optional, has defaults)
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CONTEXT_DOCUMENTS=10
SIMILARITY_THRESHOLD=0.7
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Security: Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security: Webhook Verification (OPTIONAL but RECOMMENDED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
HUBSPOT_WEBHOOK_SECRET=your-hubspot-webhook-secret
GMAIL_WEBHOOK_TOKEN=your-gmail-verification-token